{# Utilisation du squelette de page base.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}

    {# Grille Bootstrap #}
    <div class="container-fluid">

        {# Titre h1 de la page #}
        <div class="row">
            <h1 class="col-12 text-center my-5">Créer un compte</h1>
        </div>

        {# Formulaire d'inscription #}
        <div class="row">

            <div class="col-12 col-md-4 mx-auto">


                {# Overture du formulaire #}
                {{ form_start( registrationForm ) }}

                    {# Affichages des erreurs génrales du formulaire #}
                    {{ form_errors( registrationForm ) }}

                    {# Champ email #}
                    {{ form_row( registrationForm.email ) }}

                    {# Champ pseudo #}
                    {{ form_row( registrationForm.pseudonym ) }}

                    {# Champ mot de passe #}
                    {{ form_row( registrationForm.plainPassword ) }}

                    {# Affichage du captcha #}
                    <div class="mb-3">
                        <div class="mb-2">Captcha de sécurité</div>

                        <div class="g-recaptcha" data-sitekey="{{ google_recaptcha_site_key }}"></div>
                    </div>

                    {# Bouton de validation #}
                    {{ form_row( registrationForm.save ) }}

                {# Fermeture du formulaire #}
                {{ form_end( registrationForm ) }}

            </div>

        </div>

    </div>

{% endblock %}

{% block js %}
    {# Fichier is nécessaire pour faire fonctionner le recaptcha de de Google #}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}


